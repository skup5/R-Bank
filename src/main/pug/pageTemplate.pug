mixin css(paths)
    each item in paths
        link(rel="stylesheet" type="text/css" href=item)

mixin script(paths)
    each item in paths
        script(type="text/javascript" src=item)

mixin bsDropdownMenu(...items)
    ul.dropdown-menu
        each item in items
            li: a(href=item.url)
                if item.icon
                    span(class=item.icon)
                |#{item.label}


