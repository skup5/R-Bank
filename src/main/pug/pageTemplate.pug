- var useInverseTheme = true;

mixin css(paths)
    each item in paths
        link(rel="stylesheet" type="text/css" href=item)

mixin script(paths)
    each item in paths
        script(type="text/javascript" src=item)

mixin bsDropdownMenu(...items)
    ul.dropdown-menu
        each item in items
            li: a(href=item.url) #{item.label}


doctype html
html(lang="cs")
    head
        meta(charset="utf-8")
        meta(name="viewport" content="width=device-width initial-scale=1")
        +css(["css/bootstrap.min.css","css/bootstrap-theme.css","css/font-awesome.min.css"])
        block css
        block title

    body
        // HEADER
        header#navbar.navbar.navbar-fixed-top(class=useInverseTheme?"navbar-inverse":"")
            nav.container
                .navbar-header
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#header-navbar-collapse")
                        - for (var x = 0; x < 3; x++)
                            span.icon-bar
                    a(class="navbar-brand" href="#") R-bank

                .collapse.navbar-collapse#header-navbar-collapse
                    ul.nav.navbar-nav
                        block leftNavbar

                    ul.nav.navbar-nav.navbar-right
                        block rightNavbar
                            li
                                .navbar-text Motiv
                                button(type="button" class="navbar-btn btn" class=useInverseTheme ? "btn-default" : "btn-inverse" id="theme_switch"
                                title="Změnit motiv") &nbsp;&nbsp;


        // CONTENT
        block content

