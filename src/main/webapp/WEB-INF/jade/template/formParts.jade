mixin personalInfo(inputName, inputSurname, inputPersonalNo)
    .form-group
        label.control-label.col-sm-5.required-input(for="inputName") Jméno
        .col-sm-7: input(type="text" id="inputName" name="inputName" value=inputName class="form-control" placeholder="jméno" required autofocus
        pattern="([^\\s]+)")
    .form-group
        label.control-label.col-sm-5.required-input(for="inputSurname") Příjmení
        .col-sm-7: input(type="text" id="inputSurname" name="inputSurname" value=inputSurname class="form-control" placeholder="příjmení" required
        pattern="([^\\s]+)")
    .form-group
        label.control-label.col-sm-5.required-input(for="inputPersonalNo") Rodné číslo
        .col-sm-7: input(type="text" id="inputPersonalNo" name="inputPersonalNo" value=inputPersonalNo class="form-control" placeholder="##########" required
        autocomplete="off" pattern="\\d{9,10}" maxlength=10)

mixin contactInfo(inputStreet, inputBuildNo, inputCity, inputZipCode, inputEmail, inputPhoneNumber)
    .form-group
        label.control-label.col-sm-5(for="inputStreet") Ulice
        .col-sm-7: input(type="text" id="inputStreet" name="inputStreet" value=inputStreet class="form-control" placeholder="název ulice")
    .form-group
        label.control-label.col-sm-5(for="inputBuildNo") Č. popisné
        .col-sm-7: input(type="number" id="inputBuildNo" name="inputBuildNo" value=inputBuildNo class="form-control" placeholder="####" min=1 max=9999)
    .form-group
        label.control-label.col-sm-5(for="inputCity") Město
        .col-sm-7: input(type="text" id="inputCity" name="inputCity" value=inputCity class="form-control" placeholder="název města")
    .form-group
        label.control-label.col-sm-5(for="inputZipCode") PSČ
        .col-sm-7: input(type="text"  id="inputZipCode" name="inputZipCode" value=inputZipCode class="form-control" placeholder="#####"
        pattern="\\d{5}" maxlength=5)
    .form-group
        label.control-label.col-sm-5.required-input(for="inputEmail") Emailová adresa
        .col-sm-7: .input-group
            .input-group-addon @
            input(type="email" id="inputEmail" name="inputEmail" value=inputEmail class="form-control" placeholder="e@mail.com" required)
    .form-group
        label.control-label.col-sm-5(for="inputPhoneNumber") Kontaktní telefon
        .col-sm-7: .input-group
            .input-group-addon
                span.fa.fa-phone
                | +420
            input.form-control(type="text" id="inputPhoneNumber" name="inputPhoneNumber" value=inputPhoneNumber placeholder="123456789"
            pattern="\\d{9}" maxlength=9)

mixin bankAccount(inputCardNo, inputCardPinNo, inputBankAccountNo, selectCurrency, currencies)
    .form-group
        label.control-label.col-sm-5.required-input(for="inputCardNo") Číslo platební karty
        .col-sm-7: .input-group
            .input-group-addon: span.fa.fa-credit-card
            input(type="text" id="inputCardNo" name="inputCardNo" value=inputCardNo class="form-control" placeholder="################" required
            autocomplete="off" pattern="\\d{16}" maxlength=16)
            span.input-group-btn
                button.btn.btn-primary(type="button" id="btnCardNo" data-toggle="tooltip" data-placement="right" title="Generovat")
                    span.fa.fa-random.fa-only.fa-flip-horizontal
    .form-group
        label.control-label.col-sm-5.required-input(for="inputCardPinNo") Pin platební karty
        .col-sm-7: .input-group
            input(type="text" id="inputCardPinNo" name="inputCardPinNo" value=inputCardPinNo class="form-control" placeholder="####" required
            autocomplete="off" pattern="\\d{4}" maxlength=4)
            span.input-group-btn
                button.btn.btn-primary(type="button" id="btnCardPin" data-toggle="tooltip" data-placement="right" title="Generovat")
                    span.fa.fa-random.fa-only.fa-flip-horizontal
    .form-group
        label.control-label.col-sm-5.required-input(for="inputBankAccountNo") Číslo účtu
        .col-sm-7: .input-group
            input(type="text" id="inputBankAccountNo" name="inputBankAccountNo" value=inputBankAccountNo class="form-control" placeholder="#########" required
            autocomplete="off" pattern="\\d{9}" maxlength=9)
            span.input-group-btn
                button.btn.btn-primary(type="button" id="btnBankAccountNo" data-toggle="tooltip" data-placement="right" title="Generovat")
                    span.fa.fa-random.fa-only.fa-flip-horizontal
    .form-group
        label.control-label.col-sm-5.required-input(for="selectCurrency") Měna
        .col-sm-7
            select.form-control(id="selectCurrency" name="selectCurrency")
                each currency in currencies
                    option(selected=currency.name().equals(selectCurrency))= currency.name()